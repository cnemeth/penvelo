<% semantic_form_for @user, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>

      <%= f.input :first_name, :label => 'First name' %>
      <%= f.input :middle_initial, :label => 'Middle initial' %>
      <%= f.input :last_name, :label => 'Last name' %>
      <%= f.input :photo, :label => 'User photo', :as => :file  %>

      <% f.semantic_fields_for :contacts do |builder| %>
        <%= render "contact_fields", :f => builder %>
      <% end %>

      <%= f.input :date_of_birth, :label => 'Date of birth', :start_year => 1900 %>
      <%= f.input :gender, :label => 'Gender', :as => :radio, :collection => [["Male"],["Female"]]   %>
      <%= f.input :user_image_url, :label => 'User image url' %>
      <%= f.input :image_gallery_url, :label => 'Image gallery url' %>
      <%= f.input :member_since, :label => 'Member since' %>
      <%= f.input :active, :label => 'Active' %>
      <%= f.input :performance_team_member, :label => 'Performance team member' %>
      <%= f.input :usac_license, :label => 'USAC license' %>
      <%= f.input :profile, :label => 'Profile' %>
      <%= f.input :login, :label => 'Login name' %>
      <%= f.input :password, :label => 'Password' %>
      <%= f.input :password_confirmation, :label => 'Confirm password' %>
      <%= f.input :password_salt, :label => 'Password salt' %>

      <%- show_to :site_admin do -%>
        <%= f.input :roles, :label => 'Roles', :as => :check_boxes, :collection => roles %>

        <%= f.input :positions, :label => 'Positions', :as => :check_boxes, :collection => positions %>
      <% end -%>

      <%= f.input :race_disciplines, :label => 'Race/Ride disciplines', :as => :check_boxes, :collection => race_disciplines %>

      <%= f.input :race_categories, :label => 'Race categories', :as => :check_boxes, :collection => race_categories %>

  <% end %>
  <%= f.buttons %>
<% end %>

