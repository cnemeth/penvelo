<h1>Listing Feedback</h1>

<p>
  <%= link_to 'Create New Feedback', new_common_feedback_path %>
</p>

<table>
  <tr>
    <th>ID</th>
    <th>Feedback</th>
    <th>Feedback type</th>

    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @feedbacks.each do |feedback| %>
  <tr>
    <td><%=h feedback.id %></td>
    <td><%=h truncate(feedback.feedback.gsub(/<.*?>/,''), :length => 20) %></td>
    <td><%=h feedback.feedback_type.name %></td>

    <td><%=h feedback.created_at %></td>
    <td><%=h feedback.updated_at %></td>

    <td><%= link_to 'Show', common_feedback_path(feedback) %></td>
    <td><%= link_to 'Edit', edit_common_feedback_path(feedback) %></td>

  </tr>
<% end %>
</table>

<p>
  <%= link_to 'Create New Feedback', new_common_feedback_path %>
</p>

