<h1>Listing Roles</h1>

<h2 id="warning">Warrning! Be careful when editing Roles; they are used by the Acl9 authorization scheme.</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Authorizable Type</th>
    <th>Authorizable ID</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.id %></td>
    <td><%=h role.name %></td>
    <td><%=h role.authorizable_type %></td>
    <td><%=h role.authorizable_id %></td>
    <td><%=h role.created_at %></td>
    <td><%=h role.updated_at %></td>

    <td><%= link_to 'Show', admin_role_path(role) %></td>
    <td><%= link_to 'Edit', edit_admin_role_path(role) %></td>
    <td><%= link_to "Delete", admin_role_path(role), :confirm => 'Are you sure?',:method => :delete  %></td>
  </tr>
<% end %>
</table>

<p>
  <%= link_to 'Create New Role', new_admin_role_path %>
</p>

