<h1>Listing Content Types</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @content_types.each do |content_type| %>
  <tr>
    <td><%=h content_type.id %></td>
    <td><%=h content_type.name %></td>
    <td><%=h content_type.created_at %></td>
    <td><%=h content_type.updated_at %></td>

    <td><%= link_to 'Show', admin_content_type_path(content_type) %></td>
    <td><%= link_to 'Edit', edit_admin_content_type_path(content_type) %></td>
    <td><%= link_to "Delete", admin_content_type_path(content_type), :confirm => 'Are you sure?',:method => :delete  %></td>
  </tr>
<% end %>
</table>

<p>
  <%= link_to 'Create New Content Type', new_admin_content_type_path %>
</p>

