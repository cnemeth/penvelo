<% semantic_form_for([:admin, @ride]) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>

      <%= f.input :name, :label => 'Name' %>
      <%= f.input :days, :label => 'Days' %>
      <%= f.input :location, :label => 'Location' %>
      <%= f.input :start_point, :label => 'Starts at' %>
      <%= f.input :end_point, :label => 'Ends at' %>
      <%= f.input :description, :label => 'Description' %>
      <%= f.input :distance, :label => 'Disctance in miles' %>
      <%= f.input :elevation, :label => 'Elevation gain in feet' %>
      <%= f.input :link_to_pdf, :label => 'Link to PDF' %>
      <%= f.input :link_to_map, :label => 'Link to map' %>
      <%= f.input :ride_type, :label => 'Ride type', :as => :select, :collection => ride_types, :include_blank => false %>

  <% end %>
  <%= f.submit "Submit" %>
<% end %>

