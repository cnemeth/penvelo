<% semantic_form_for([:admin, @content]) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>

      <%= f.input :title, :label => 'Title' %>
      <%= f.input :entry, :label => 'Entry' %>
      <%= f.input :tags, :label => 'Tags' %>
      <%= f.input :content_type, :label => 'Title', :as => :select, :collection => content_types, :include_blank => false %>

  <% end %>
  <%= f.submit "Submit" %>
<% end %>

