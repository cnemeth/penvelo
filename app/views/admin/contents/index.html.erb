<h1>Listing Contents</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Entry</th>
    <th>Tags</th>
    <th>Content type id</th>
    <th>Content type name</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%=h content.id %></td>
    <td><%=h content.title %></td>
    <td><%=h content.entry %></td>
    <td><%=h content.tags %></td>
    <td><%=h content.content_type_id %></td>
    <td><%=h ContentType.find(content.content_type_id).name %></td>
    <td><%=h content.created_at %></td>
    <td><%=h content.updated_at %></td>

    <td><%= link_to 'Show', admin_content_path(content) %></td>
    <td><%= link_to 'Edit', edit_admin_content_path(content) %></td>
    <td><%= link_to "Delete", admin_content_path(content), :confirm => 'Are you sure?',:method => :delete  %></td>
  </tr>
<% end %>
</table>

<p>
  <%= link_to 'Create New Content', new_admin_content_path %>
</p>

