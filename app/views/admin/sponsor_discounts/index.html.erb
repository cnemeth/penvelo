<h1>Listing Sponsor Discounts</h1>

<table>
  <tr>
    <th>Discount ID</th>
    <th>Discount</th>
    <th>Sponsor</th>

    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @sponsor_discounts.each do |sponsor_discount| %>
  <tr>
    <td><%=h sponsor_discount.id %></td>
    <td><%=h truncate(sponsor_discount.discount.gsub(/<.*?>/,''), :length => 40) %></td>
    <td><%=h sponsor_discount.sponsor.name %></td>

    <td><%=h sponsor_discount.created_at %></td>
    <td><%=h sponsor_discount.updated_at %></td>

    <td><%= link_to 'Show', admin_sponsor_discount_path(sponsor_discount) %></td>
    <td><%= link_to 'Edit', edit_admin_sponsor_discount_path(sponsor_discount) %></td>
    <td><%= link_to "Delete", admin_sponsor_discount_path(sponsor_discount), :confirm => 'Are you sure?',:method => :delete  %></td>
  </tr>
<% end %>
</table>

<p>
  <%= link_to 'Create New Sponsor Discount', new_admin_sponsor_discount_path %>
</p>

