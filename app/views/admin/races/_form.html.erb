<% semantic_form_for([:admin, @race]) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>

      <%= f.input :name, :label => 'Name' %>
      <%= f.input :date, :label => 'Date', :start_year => 2005, :include_blank => false %>
      <%= f.input :time, :label => 'Time', :include_blank => false %>
      <%= f.input :place, :label => 'Location' %>
      <%= f.input :organizer, :label => 'Organizer' %>
      <%= f.input :start_location, :label => 'Starts at' %>
      <%= f.input :finish_location, :label => 'Ends at' %>
      <%= f.input :description, :label => 'Description' %>
      <%= f.input :link_to_website, :label => 'Link to website' %>
      <%= f.input :link_to_registration, :label => 'Link to registration' %>
      <%= f.input :race_discipline, :label => 'Race type', :as => :select, :collection => race_disciplines, :include_blank => false %>

  <% end %>
  <%= f.submit "Submit" %>
<% end %>

