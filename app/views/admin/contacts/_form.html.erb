<% semantic_form_for([:admin, @contact]) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>

      <%= f.input :user_id, :label => 'User id' %>
      <%= f.input :street, :label => 'Street' %>
      <%= f.input :city, :label => 'City' %>
      <%= f.input :state, :label => 'State', :as => :select, :collection => us_states_list, :include_blank => false %>
      <%= f.input :zip, :label => 'Zip' %>
      <%= f.input :country, :label => 'Country', :as => :select, :collection => countries_list, :include_blank => false %>
      <%= f.input :primary_phone, :label => 'Primary phone' %>
      <%= f.input :secondary_phone, :label => 'Secondary phone' %>
      <%= f.input :email, :label => 'Email' %>
      <%= f.input :im_handle, :label => 'Im handle' %>
      <%= f.input :im_types, :label => 'Im type', :as => :radio, :collection => ImType.all.collect {|im_type|[im_type.name, im_type.id]} %>

  <% end %>
  <%= f.submit "Submit" %>
<% end %>

