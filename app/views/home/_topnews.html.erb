<h1>Latest News</h1>
<ul>
	<% top_news = Content.find(:all, :conditions => "content_type_id = #{ContentType.find(:first, :conditions => "name = 'news'").id}", :order => "created_at DESC", :limit => 3) %>
	<% top_news.each do |news| %>
	<li>
		<h2><%= news.title %></h2>
		<p>Posted on:<%= news.created_at %></p>
	</li>
	<% end %>
</ul>

