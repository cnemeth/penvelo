<ul>
  <div id="admin_home_link">
	<% show_to :site_admin do %>
      <li><%= link_to(image_tag("my_admin_button.png", :size => "100x25"), admin_home_path) %></li>
  <% end %>
  </div>
  <div id="login">
    <% if !current_user %>
      <li><%= link_to(image_tag("my_register_button.png", :size => "100x25"), new_account_path) %></li>
      <li><%= link_to(image_tag("my_login_button.png", :size => "100x25"), new_user_session_url) %></li>
    <% else %>
      <li><%= link_to(image_tag("my_profile_button.png", :size => "100x25"), account_path) %></li>
      <li><%= link_to(image_tag("my_logout_button.png", :size => "100x25"), user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?") %></li>
    <% end %>
  </div>
</ul>

